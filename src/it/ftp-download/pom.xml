<?xml version="1.0" encoding="UTF-8"?>
<project>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codehaus.mojo</groupId>
  <artifactId>wagon-maven-plugin</artifactId>
  <packaging>pom</packaging>
  <version>testing</version>

  <build>
 
    <defaultGoal>package</defaultGoal>
    
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ftp</artifactId>
        <version>1.0-beta-4</version>
      </extension>
    </extensions>
    
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <version>${version}</version>
        <executions>
          <execution>
            <id>ftp-download</id>
            <phase>package</phase>
            <goals>
              <goal>download</goal>
            </goals>
            <configuration>
              <url>ftp://ftp.ibiblio.org</url>
              <resourceSrc>README</resourceSrc>
              <resourceDest>${project.build.directory}/it/ftp-download</resourceDest>
              <serverId>ibiblio.ftp</serverId>
            </configuration>
            <!-- need additional settings.xml inorder to get this to work
            
                <server>
                  <id>ibiblio.ftp</id>
                  <username>anonymous</username>
                  <password></password>
                </server>
                
             -->
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <properties>
    <version>testing</version>
  </properties>

</project>