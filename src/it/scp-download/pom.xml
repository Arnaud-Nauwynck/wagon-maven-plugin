<?xml version="1.0" encoding="UTF-8"?>
<project>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codehaus.mojo</groupId>
  <artifactId>wagon-maven-plugin</artifactId>
  <packaging>pom</packaging>
  <version>testing</version>

  <build>
 
    <defaultGoal>package</defaultGoal>
    
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ssh</artifactId>
        <version>1.0-beta-4</version>
      </extension>
    </extensions>
    
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <version>${version}</version>
        <configuration>
           <url>scp://localhost/home/${user.name}/wagon-plugin-it</url>
           <serverId>localhost.scp</serverId>
           <downloadDirectory>${project.build.directory}/it/scp-download</downloadDirectory>
        </configuration>
        <executions>
          <execution>
            <id>scp-upload</id>
            <phase>package</phase>
            <goals>
              <goal>upload</goal>
            </goals>
            <configuration>
              <fileSet>
                 <directory>${basedir}</directory>
                 <includes>
                   <include>*</include>
                   <include>src/**/test.txt</include>
                 </includes>
              </fileSet>
            </configuration>
          </execution> 
          <execution>
            <id>scp-download-all-files</id>
            <phase>package</phase>
            <goals>
              <goal>download</goal>
            </goals>
          </execution>
          <execution>
            <id>scp-list</id>
            <phase>package</phase>
            <goals>
              <goal>list</goal>
            </goals>
          </execution>
       
          <execution>
            <id>scp-download-single-file</id>
            <phase>package</phase>
            <goals>
              <goal>download</goal>
            </goals>
            <configuration>
               <url>scp://localhost/home/${user.name}/wagon-plugin-it/src/main/resources</url>
               <remoteFileSet>
                 <remotePath>test.txt</remotePath>               
               </remoteFileSet>
            </configuration>
          </execution>
          
          <execution>
            <id>scp-list-single</id>
            <phase>package</phase>
            <goals>
              <goal>list</goal>
            </goals>
            <configuration>
               <url>scp://localhost/home/${user.name}/wagon-plugin-it/src/main/resources</url>
               <remotePath>test.txt</remotePath>
            </configuration>
          </execution>

        </executions>
      </plugin>
    </plugins>
  </build>

  <properties>
    <version>testing</version>
  </properties>

</project>