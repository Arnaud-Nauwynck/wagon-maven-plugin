<?xml version="1.0" encoding="UTF-8"?>
<project>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codehaus.mojo</groupId>
  <artifactId>wagon-maven-plugin</artifactId>
  <packaging>pom</packaging>
  <version>testing</version>

  <build>
 
    <defaultGoal>package</defaultGoal>
    
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <version>${version}</version>
        <configuration>
           <url>scp://localhost/home/${user.name}</url>
           <serverId>localhost.scp</serverId>
        </configuration>
        <executions>
          <execution>
            <id>scp-list</id>
            <phase>package</phase>
            <goals>
              <goal>list</goal>
            </goals>
            <configuration>
              <!--resourceSrc></resourceSrc-->
            </configuration>
          </execution>
          <execution>
            <id>scp-upload</id>
            <phase>package</phase>
            <goals>
              <goal>upload</goal>
            </goals>
            <configuration>
              <!-- need a live local sshd -->
              <resourceSrc>${basedir}/pom.xml</resourceSrc>
              <resourceDest>home/${user.name}</resourceDest>  <!-- must be full path at remote host. and must not start with a /.  this is a bug -->
            </configuration>
          </execution>        
          <execution>
            <id>scp-list2</id>
            <phase>package</phase>
            <goals>
              <goal>list</goal>
            </goals>
            <configuration>
              <resourceSrc>home/${user.name}</resourceSrc>
            </configuration>
          </execution>
          <execution>
            <!-- this is not working at time of writing this test -->
            <id>scp-download</id>
            <phase>package</phase>
            <goals>
              <goal>download</goal>
            </goals>
            <configuration>
              <resourceSrc>home/${user.name}/pom.xml</resourceSrc>
              <resourceDest>${project.build.directory}/it/scp-download</resourceDest>
            </configuration>
          </execution>
          
        </executions>
      </plugin>
    </plugins>
  </build>

  <properties>
    <version>testing</version>
  </properties>

</project>